	/**
	 * Launches the client application.
	 */
	public static void runClient() {
		EventQueue.invokeLater(() -> {
			try {
				ViewClient window = new ViewClient();
				window.frameClient.setVisible(true);
			} catch (Exception e) {
				e.printStackTrace();
			}
		});
	}

	/**
	 * Constructs the ViewClient object.
	 */
